<% content_for :page_actions do %>
    <li><%= link_to content_tag(:span, "Edit"), edit_path %></li>
    <li><%= link_to content_tag(:span, "Delete"), delete_path, method: :get, :data => {:confirm => 'Are you sure you want to <strong>permanently</strong> delete this thing?'} %></li>
<% end %>

